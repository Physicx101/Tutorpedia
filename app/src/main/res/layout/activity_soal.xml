<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_awal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.prabowo.tutorpedia.Soal"
    android:layout_weight="1"
    android:weightSum="1">

    <TextView
        android:text="01:30:00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/Timer"
        android:textSize="20dp"
        android:layout_weight="0.01"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/activity_awal4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context="ilkomp.soal.Awal"
        android:layout_weight="0.01">

        <Button
            android:text="No. 1"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:background="#ff99cc00" />

        <Button
            android:text="Akhir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Akhir"
            android:layout_weight="1"
            android:onClick="Akhir" />

        <Button
            android:text="Lewati"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/next"
            android:layout_weight="1"
            android:onClick="next" />
        <Button
            android:text="Ragu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ragu"
            android:layout_weight="1"
            android:onClick="ragu" />
    </LinearLayout>

    <ImageView
        app:srcCompat="@color/colorAccent"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_weight="0.60" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:background="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:textColor="#FFD700"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/activity_awal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context="ilkomp.soal.Awal"
        android:layout_weight="0.19">


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:color/holo_blue_dark"
            android:id="@+id/imageButton2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="button2"
            android:background="@android:color/darker_gray"
            android:layout_margin="2dp"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            app:srcCompat="@color/colorPrimary"
            android:id="@+id/imageButton"
            android:onClick="button"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_awa3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context="ilkomp.soal.Awal"
        android:layout_weight="0.19"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            app:srcCompat="@android:color/holo_blue_light"
            android:id="@+id/imageButton3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="button3"
            android:background="@android:color/darker_gray"
            />

        <Button
            android:layout_weight="1"

            app:srcCompat="@android:color/holo_blue_bright"
            android:id="@+id/imageButton4"
            android:onClick="button4"
            android:layout_margin="2dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

    </LinearLayout>
</LinearLayout>
