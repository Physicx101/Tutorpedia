<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prabowo.tutorpedia.PointActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="551dp">

        <TextView

            android:paddingTop="15dp"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TVhargatpoin"
            android:text="1500 TPoin "
            android:textColor="#000000"
            android:paddingBottom="15dp"/>

        <ImageView
            android:id="@+id/IVhadiahpoint"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/adidas"/>

        <TextView
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TVpoints"
            android:text="TPoin anda : "/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TVpoint"
            android:paddingBottom="25dp"
            android:textStyle="bold"
            android:text="point"/>

        <Button
            android:textColor="#ffffff"
            android:background="#6666cc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Tukar TPoin"
            android:textStyle="bold"
            android:id="@+id/BTtukarpoint"/>

        <TextView
            android:textStyle="bold"
            android:id="@+id/TVkodehadiahinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/TVkodehadiahuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/TVkodehadiah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/TVkodehadiahinfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>




</android.support.constraint.ConstraintLayout>
