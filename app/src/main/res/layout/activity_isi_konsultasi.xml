<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/activity_list_item_isi_diskusi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.prabowo.tutorpedia.IsiKonsultasi">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/bhs"
                    android:background="#000000"
                    android:id="@+id/IVisikonsultasisoal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_weight="1"
                    android:id="@+id/TVisikonsultasijudul"
                    android:text="Soal"
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/TVisikonsultasidesc"
                    android:text="Soal"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="14dp"
                    android:id="@+id/demooListView" />

            </LinearLayout>



            <LinearLayout
                android:layout_weight="6"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:gravity="bottom">

                <EditText
                    android:id="@+id/ETtambahkomentar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColorHint="#CFD8DC"
                    android:textColor="#CFD8DC"
                    android:hint="Tulis komentar"
                    android:paddingLeft="16dp"/>

                <ImageView
                    android:id="@+id/BTmasukkankomentar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:padding="4dp"
                    android:src="@android:drawable/ic_menu_send" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>


