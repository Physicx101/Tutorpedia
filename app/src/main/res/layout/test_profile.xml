<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1">

    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:paddingBottom="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/avatar"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/user_profile_short_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tutorpedia@gmail.com"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_marginStart="30dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/user_profile_photo"/>

        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pengguna"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/user_profile_photo"
            android:layout_alignStart="@+id/user_profile_short_bio"
            android:layout_marginTop="16dp"/>

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listprofile"
        android:layout_weight="0.45"
        android:layout_marginTop="8dp">
    </ListView>

    <Button
        android:textColor="#ffffff"
        android:background="#DC143C"
        android:text="Keluar"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
        android:id="@+id/BTlogout"
        android:layout_weight="0.05"/>
</LinearLayout>