<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LLayoutevent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/IVgambarevent"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:contentDescription="@string/action_settings"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />




                <TextView
                    android:id="@+id/TVheadevent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:text="country_name"
                    android:textColor="#6666cc"
                    android:layout_alignBottom="@id/IVgambarevent"/>



            <TextView
                android:layout_above="@id/TVheadevent"
                android:id="@+id/TVdescevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25sp"
                android:text="country_haha"
                android:textColor="#6666cc"
                android:textStyle="bold"
                />





    </RelativeLayout>

</android.support.v7.widget.CardView>