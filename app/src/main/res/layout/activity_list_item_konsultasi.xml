<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LLayoutkonsultasi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="8dp"
    card_view:cardCornerRadius="2dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/IVgambarkonsultasi"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:contentDescription="@string/action_settings"
                android:scaleType="centerCrop"
                android:layout_height="match_parent" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView

                android:id="@+id/TVheadkonsultasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="country_haha"
                android:textColor="#6666cc"
                android:textSize="20sp"
                android:textStyle="bold"
                />


            <TextView

                android:id="@+id/TVdesckonsultasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/IVgambarkonsultasi"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="country_name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#6666cc"
                android:textSize="15sp"/>


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>