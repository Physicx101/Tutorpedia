<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LLayoutkonsultasi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/IVgambarkonsultasi"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:contentDescription="@string/action_settings"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView

                android:paddingLeft="20dp"
                android:id="@+id/TVheadkonsultasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:text="country_haha"
                android:textColor="#6666cc"
                android:textStyle="bold"
                />


            <TextView

                android:id="@+id/TVdesckonsultasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:text="country_name"
                android:textColor="#6666cc"
                android:layout_alignBottom="@id/IVgambarkonsultasi"/>



        </LinearLayout>










    </LinearLayout>

</android.support.v7.widget.CardView>